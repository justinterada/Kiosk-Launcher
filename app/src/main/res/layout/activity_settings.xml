<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ Kiosk Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- PIN Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock PIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Enter 4-6 digit PIN"
            android:layout_marginBottom="16dp"/>

        <!-- Auto-lock Timeout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-lock Timeout (minutes)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etTimeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="5"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set to 0 to disable auto-lock"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginBottom="24dp"/>

        <!-- Debug Info Button -->
        <Button
            android:id="@+id/btnDebugInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ› Debug Info"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            style="?attr/materialButtonOutlinedStyle"/>

        <!-- Android Settings Button -->
        <Button
            android:id="@+id/btnAndroidSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”§ Android Settings"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            style="?attr/materialButtonOutlinedStyle"/>

        <!-- Manage Apps Button -->
        <Button
            android:id="@+id/btnManageApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Manage Allowed Apps"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            style="?attr/materialButtonOutlinedStyle"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Save Settings &amp; Lock"
            android:textSize="18sp"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>